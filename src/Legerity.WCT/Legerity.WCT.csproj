<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Product>Legerity for Windows Community Toolkit - Framework for UI tests with Selenium/Appium</Product>
    <Description>
      This package is a Windows Community Toolkit extension to the Legerity core framework for speeding up the development of automated UI tests with Selenium/Appium including:
      - Expander
      - InAppNotification
      - RadialGauge
    </Description>
    <PackageTags>Appium WinAppDriver UWP WCT</PackageTags>
    <RootNamespace>Legerity.Windows.Elements.WCT</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Appium.WebDriver" Version="4.3.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Legerity.Windows\Legerity.Windows.csproj" />
  </ItemGroup>

</Project>